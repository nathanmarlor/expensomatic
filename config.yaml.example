# Expensomatic Configuration
base_url: "https://your-instance.lightning.force.com"
login_url: "https://your-instance.lightning.force.com/lightning/page/home"
project_id: "YOUR_PROJECT_ID_HERE"

# OpenAI API Key
openai_api_key: "YOUR_OPENAI_API_KEY_HERE"

# Screenshot Settings
take_screenshots: true
screenshot_dir: "screenshots"

# Date Override Settings
# Expenses older than 30 days may not be allowed
# Set to true to automatically adjust old dates to 30 days ago
override_old_dates: true
max_days_old: 30

